<BorderPane focusTraversable="true" prefHeight="750.0" prefWidth="300.0" stylesheets="@LeftBar_sur.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LeftBar_sur">
